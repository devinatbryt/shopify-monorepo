      "module": "./dist/main/accordion-block/index.cjs"
    },
    "./gnav-header": {
      "jsdelivr": "./dist/jsdelivr/gnav-header/index.js",
      "import": "./dist/main/gnav-header/index.js",
      "module": "./dist/main/gnav-header/index.cjs"
    },
    "./element-portal": {
      "jsdelivr": "./dist/jsdelivr/element-portal/index.js",
      "import": "./dist/main/element-portal/index.js",
      "module": "./dist/main/element-portal/index.cjs"
    },
    "./drawer": {
      "jsdelivr": "./dist/jsdelivr/drawer/index.js",
      "import": "./dist/main/drawer/index.js",
      "module": "./dist/main/drawer/index.cjs"
    },
    "./hash-router": {
      "jsdelivr": "./dist/jsdelivr/hash-router/index.js",

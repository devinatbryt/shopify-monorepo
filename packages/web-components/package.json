    "focus-trap": "^7.5.4",
    "motion": "^10.18.0",
    "observe-element-in-viewport": "^0.0.15",
    "solid-element": "^1.8.0",
    "solid-js": "^1.8.22",
    "stickybits": "^3.7.11"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
